<h1>Editing article</h1>
<%= form_for(@article) do |f| %>
  <% f.options[:html][:class] += ' form-control'%>
  <%=f.label :title %>
  <%=f.text_field :title, :class => 'form-control'  %>
  <%=f.label :content  %>
  <%=f.text_field :content, :class => 'form-control form-content'  %>
  <br>
  <%= f.submit :submit => 'Update Article', :class => "btn btn-default border" %>
<% end %>
<div class="links">
  <%=  link_to "Show", article_path(@article)%> | <%= link_to 'Back', articles_path %>
</div>
